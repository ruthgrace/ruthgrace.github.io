# Default server configuration
#

# PUT THIS IN /etc/nginx/sites-available and /etc/nginx/sites-enabled

server {
	listen 80;
        listen [::]:80;
	server_name ruthgracewong.com www.ruthgracewong.com;

        location ~ /.well-known {
            root /var/www/ruthgrace;
        }
        location / {
            return 301 https://$host$request_uri;
        }

}

server {
        listen 443 ssl;
	server_name ruthgracewong.com www.ruthgracewong.com;
        ssl_certificate /etc/letsencrypt/live/www.ruthgracewong.com/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/www.ruthgracewong.com/privkey.pem;

        location / {
            root /var/www/ruthgrace;
	    index index.html;
	    add_header Vary "User-Agent";
        }

}

